<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPaneEditor" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DocumentsController">
   <children>
      <GridPane prefHeight="561.0" prefWidth="756.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Dokumenty księgowe" GridPane.columnSpan="2" GridPane.halignment="CENTER">
               <font>
                  <Font size="23.0" />
               </font>
            </Text>
            <Button fx:id="btnLogOut" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="37.0" prefWidth="84.0" text="Wyloguj" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
               <font>
                  <Font size="15.0" />
               </font>
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
            </Button>
            <Button fx:id="btnMainMenu" mnemonicParsing="false" onAction="#handleButtonAction" text="Wróć do menu" GridPane.halignment="LEFT" GridPane.rowIndex="3">
               <font>
                  <Font size="15.0" />
               </font>
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
            </Button>
            <Button fx:id="btnShowChosenDocument" mnemonicParsing="false" onAction="#handleButtonAction" text="Przejdź do szczegółów" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
               <font>
                  <Font size="15.0" />
               </font>
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
            </Button>
            <TableView id="table-assets" fx:id="tableViewDocuments" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
               <columns>
                  <TableColumn fx:id="tcDate" prefWidth="143.0" text="Data transakcji" />
                  <TableColumn fx:id="tcNumber" prefWidth="143.0" text="Numer dokumentu" />
                  <TableColumn fx:id="tcName" prefWidth="143.0" text="Nazwa kontrahenta" />
                  <TableColumn fx:id="tcMoney" prefWidth="143.0" text="Kwota brutto [zł]" />
                  <TableColumn fx:id="tcDocumentType" prefWidth="142.0" text="Typ dokumentu" />
               </columns>
               <GridPane.margin>
                  <Insets left="20.0" right="20.0" />
               </GridPane.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Text fx:id="textError" fill="#d00a0a" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Text>
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="272.0" minHeight="10.0" prefHeight="270.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="134.0" minHeight="8.0" prefHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
   </children>
</AnchorPane>
